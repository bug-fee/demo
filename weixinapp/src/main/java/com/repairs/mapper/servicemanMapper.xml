<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.repairs.dao.ServicemanDao">
	<resultMap type="com.repairs.bo.Servicemanbo" id="servicemanMap">
		<id property="id" column="id" />
		<result property="openId" column="openId" />
		<result property="name" column="name" />
		<result property="gender" column="gender" />
		<result property="tell" column="tell" />
		<result property="authorizedTime" column="authorizedTime" />
		<result property="state" column="state" />
		<result property="headimgurl" column="headimgurl" />
		<association property="newcam" column="newcamId" javaType="CampusBo" select="findCampusById">
			<id property="id" column="id" />
			<result property="name" column="name" />
		</association>
		<association property="campus" column="campusId" javaType="CampusBo" select="findCampusById">
			<id property="id" column="id" />
			<result property="name" column="name" />
		</association>
	</resultMap>
	
	<select id="findCampusById" parameterType="int" resultType="Campusbo">
		select * from campus where id=#{id}
	</select>
	
	<select id="selectServiceman" parameterType="Servicemanbo" resultMap="servicemanMap">
		SELECT * FROM serviceman
		<trim prefix="where" suffixOverrides="and | or">
			<if test="id!=null">id=#{id} AND</if>
			<if test="openId!=null">openId=#{openId} AND</if>
			<if test="name!=null">name=#{name} AND</if>
			<if test="gender!=null">gender=#{gender} AND</if>
			<if test="tell!=null">tell=#{tell} AND</if>
			<if test="authorizedTime!=null">authorizedTime=#{authorizedTime} AND</if>
			<if test="state!=null">state=#{state} AND</if>
			<if test="headimgurl!=null">state=#{headimgurl} AND</if>
			<if test="newcam!=null and newcam.id!=null">newcamId=#{newcamId.id}</if>
			<if test="campus!=null and campus.id!=null">campusId=#{campus.id}</if>
		</trim>
		<if test="offset!=null and limit!=null">LIMIT #{offset},#{limit}</if>
	</select>
	
	<insert id="insertServiceman" parameterType="Servicemanbo">
		INSERT INTO serviceman
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="openId!=null">openId,</if>
			<if test="name!=null">name,</if>
			<if test="gender!=null">gender,</if>
			<if test="tell!=null">tell,</if>
			<if test="authorizedTime!=null">authorizedTime,</if>
			<if test="state!=null">state,</if>
			<if test="headimgurl!=null">headimgurl,</if>
			<if test="newcam!=null and newcam.id!=null">newcamId,</if>
			<if test="campus!=null and campus.id!=null">campusId,</if>
		</trim>
		VALUES
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="id!=null">i#{id},</if>
			<if test="openId!=null">#{openId} ,</if>
			<if test="name!=null">#{name} ,</if>
			<if test="gender!=null">#{name} ,</if>
			<if test="tell!=null">#{tell} ,</if>
			<if test="authorizedTime!=null">#{authorizedTime} ,</if>
			<if test="state!=null">#{state} ,</if>
			<if test="headimgurl!=null">#{headimgurl} ,</if>
			<if test="newcam!=null and newcam.id!=null">#{newcam.id},</if>
			<if test="campus!=null and campus.id!=null">#{campus.id} ,</if>
		</trim>
	</insert>

	<update id="updateServiceman" parameterType="Servicemanbo">
		UPDATE serviceman
		<trim prefix="set" suffixOverrides=",">
			<if test="openId!=null">openId=#{openId} ,</if>
			<if test="name!=null">name=#{name} ,</if>
			<if test="gender!=null">gender=#{gender} ,</if>
			<if test="tell!=null">tell=#{tell} ,</if>
			<if test="authorizedTime!=null">authorizedTime=#{authorizedTime} ,</if>
			<if test="state!=null">state=#{state} ,</if>
			<if test="headimgurl!=null">headimgurl=#{headimgurl} ,</if>
			<if test="newcam!=null and newcam.id!=null">newcamId=#{newcam.id},</if>
			<if test="campus!=null and campus.id!=null">campusId=#{campus.id} ,</if>
		</trim>
		<trim prefix="where" suffixOverrides="and | or">
			<if test="id!=null">id=#{id} AND</if>
			<if test="openId!=null">openId=#{openId} AND</if>
		</trim>
	</update>
	
	<delete id="deleteServiceman" parameterType="Servicemanbo">
		DELETE FROM serviceman
		<trim prefix="where" suffixOverrides="and | or">
			<if test="id!=null">id=#{id} AND</if>
			<if test="openId!=null">openId=#{openId} AND</if>
			<if test="name!=null">name=#{name} AND</if>
			<if test="gender!=null">gender=#{gender} AND</if>
			<if test="tell!=null">tell=#{tell} AND</if>
			<if test="authorizedTime!=null">authorizedTime=#{authorizedTime} AND</if>
			<if test="state!=null">state=#{state} AND</if>
			<if test="newcam!=null and newcam.id!=null">newcamId=#{newcam.id} AND</if>
			<if test="campus!=null and campus.id!=null">campusId=#{campus.id} AND</if>
		</trim>
	</delete>
	<select id="selectServicemanByState" resultMap="servicemanMap">
		select * from serviceman where state in (0,3);
	</select>
	<update id="updatesermanstate" parameterType="Servicemanbo">
		update serviceman set campusId=#{campus.id},newcamId=null,state=#{state} where id=#{id};
	</update>
	
	<select id="selectServicemanByCampusId" resultMap="servicemanMap">
		select * from serviceman where campusId=#{id}
	</select>
	
	<select id="selectServicemanById" resultMap="servicemanMap">
		select * from serviceman where id=#{id}
	</select>
</mapper>
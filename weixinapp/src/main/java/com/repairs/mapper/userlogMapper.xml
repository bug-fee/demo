<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.repairs.dao.UserlogDao">
	<resultMap type="com.repairs.bo.Userlogbo" id="userlogResultMap">
		<id property="id" column="id" />
		<result property="name" column="name" />
		<result property="logtime" column="logtime" />
		<result property="state" column="state" />
	</resultMap>
	<select id="selectUserlogBypage" parameterType="Userlogbo" resultMap="userlogResultMap">
		select * from  userlog order by id desc  limit #{offset},#{limit} 
	</select>
	<select id="selectUserlogCount" resultType="int">
		select count(*) from userlog
	</select>
	
	<insert id="insertUserlog" parameterType="Userlogbo">
		insert into userlog(name,logtime,state) values(#{name},#{logtime},#{state})
	</insert>
	
	<delete id="deleteUserlog" parameterType="int">
		delete from userlog where id=#{id}
	</delete>
	
</mapper>